<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Soal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-light">
  <%- include('partials/_navbar') %>

  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card border-0 shadow-lg">
          <div class="card-header bg-warning bg-opacity-10 py-4 text-center border-bottom-0">
             <div class="d-inline-block bg-warning text-dark rounded-circle p-3 mb-2 shadow-sm">
               <i class="bi bi-pencil-square display-6"></i>
            </div>
            <h4 class="fw-bold">Edit Soal</h4>
          </div>

          <div class="card-body p-4 pt-0">
            <form action="/teacher/<%= teacherId %>/exercise/<%= exercise.id %>/edit" method="POST">
              
              <div class="mb-4">
                <label class="form-label fw-bold text-uppercase small text-muted">Mata Pelajaran</label>
                <div class="input-group">
                   <span class="input-group-text bg-light border-end-0"><i class="bi bi-book"></i></span>
                   <select name="courseId" class="form-select bg-light border-start-0">
                    <% categories.forEach(cat => { %>
                      <optgroup label="<%= cat.name %>">
                        <% cat.Courses.forEach(course => { %>
                          <option value="<%= course.id %>" <%= exercise.courseId === course.id ? "selected" : "" %>>
                            <%= course.name %>
                          </option>
                        <% }) %>
                      </optgroup>
                    <% }) %>
                  </select>
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label fw-bold text-uppercase small text-muted">Pertanyaan</label>
                <textarea name="question" class="form-control bg-light" rows="3"><%= exercise.question %></textarea>
              </div>

              <div class="mb-4">
                <label class="form-label fw-bold text-uppercase small text-muted">Kunci Jawaban</label>
                <div class="input-group">
                   <span class="input-group-text bg-success text-white border-0"><i class="bi bi-key-fill"></i></span>
                   <input type="text" name="answerKey" class="form-control bg-light" value="<%= exercise.answerKey %>">
                </div>
              </div>

              <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="/teacher/<%= teacherId %>" class="btn btn-outline-secondary rounded-pill px-4 fw-bold me-md-2">Batal</a>
                <button type="submit" class="btn btn-warning text-dark rounded-pill px-5 fw-bold shadow-sm">Update Soal</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>