<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Daftar Kursus</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-light">
  <%- include('partials/_navbar') %>

  <div class="container my-5">
    <div class="d-flex align-items-center mb-4">
       <a href="/student/<%= userId %>" class="btn btn-outline-secondary btn-sm rounded-circle me-3" style="width: 40px; height: 40px;"><i class="bi bi-arrow-left mt-1 d-block"></i></a>
       <h2 class="fw-bold mb-0">Kursus Tersedia</h2>
    </div>

    <div class="row g-4">
      <% if (courses.length > 0) { %>
        <% courses.forEach(c => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 border-0 shadow-sm hover-effect">
            <div class="card-body p-4 d-flex flex-column">
              <div class="mb-3">
                 <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-10 rounded-pill">
                   <i class="bi bi-book-half me-1"></i> Course
                 </span>
              </div>
              <h5 class="card-title fw-bold text-dark mb-2"><%= c.name %></h5>
              <p class="card-text text-secondary small flex-grow-1"><%= c.description %></p>
              
              <div class="d-flex align-items-center text-muted small mt-3 pt-3 border-top">
                <i class="bi bi-stopwatch me-1"></i> <%= c.duration || 60 %> Menit
                <span class="mx-2">â€¢</span>
                <i class="bi bi-person-video3 me-1"></i> Mentor
              </div>
            </div>
            <div class="card-footer bg-white border-0 p-4 pt-0">
              <a href="/student/<%= userId %>/course/<%= c.id %>" class="btn btn-primary w-100 rounded-pill fw-bold shadow-sm">
                Mulai Belajar <i class="bi bi-arrow-right-circle ms-2"></i>
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center py-5">
           <div class="mb-3 text-muted opacity-50"><i class="bi bi-journal-x display-1"></i></div>
           <h4 class="text-muted">Belum ada kursus di kategori ini.</h4>
           <a href="/student/<%= userId %>" class="btn btn-link text-decoration-none">Cari kategori lain</a>
        </div>
      <% } %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>