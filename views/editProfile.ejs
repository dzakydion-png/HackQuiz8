<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Profil</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-light">
  <%- include('partials/_navbar') %>

  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-lg">
          <div class="card-header bg-white border-bottom-0 pt-4 px-4 text-center">
             <div class="d-inline-block bg-primary text-white rounded-circle p-3 mb-2">
               <i class="bi bi-person-gear display-6"></i>
             </div>
            <h4 class="fw-bold">Edit Profil</h4>
          </div>

          <div class="card-body p-4">
            <% if (errors && errors.length > 0) { %>
              <div class="alert alert-danger d-flex align-items-center mb-4">
                <i class="bi bi-exclamation-circle-fill me-2"></i>
                <div>
                  <% errors.forEach(err => { %> <%= err %> <% }) %>
                </div>
              </div>
            <% } %>

            <form action="/<%= user.role %>/<%= userId %>/profile/edit" method="POST">
              <div class="mb-3">
                <label class="form-label text-uppercase small fw-bold text-secondary">Nama Lengkap</label>
                <div class="input-group">
                  <span class="input-group-text bg-light border-end-0"><i class="bi bi-person"></i></span>
                  <input type="text" name="fullName" class="form-control bg-light border-start-0" value="<%= profile?.fullName %>" placeholder="Nama Anda...">
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label text-uppercase small fw-bold text-secondary">Alamat</label>
                <div class="input-group">
                  <span class="input-group-text bg-light border-end-0"><i class="bi bi-geo-alt"></i></span>
                  <textarea name="alamat" class="form-control bg-light border-start-0" rows="2"><%= profile?.alamat %></textarea>
                </div>
              </div>

              <div class="mb-3">
                <label class="form-label text-uppercase small fw-bold text-secondary">Pendidikan Terakhir</label>
                <select name="lastEducation" class="form-select bg-light">
                  <option value="" disabled selected>-- Pilih --</option>
                  <% ['SMA/SMK', 'D3', 'S1', 'S2', 'S3'].forEach(edu => { %>
                    <option value="<%= edu %>" <%= profile?.lastEducation === edu ? 'selected' : '' %>><%= edu %></option>
                  <% }) %>
                </select>
              </div>

              <div class="mb-4">
                <label class="form-label text-uppercase small fw-bold text-secondary mb-2">Minat Belajar</label>
                <div class="card p-3 bg-light border-0">
                  <div class="row g-2">
                    <% allCategories.forEach(cat => { %>
                      <% let isSelected = user.Categories.some(userCat => userCat.id === cat.id) %>
                      <div class="col-6">
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" name="categoryIds" value="<%= cat.id %>" id="cat_<%= cat.id %>" <%= isSelected ? 'checked' : '' %>>
                          <label class="form-check-label" for="cat_<%= cat.id %>"> <%= cat.name %> </label>
                        </div>
                      </div>
                    <% }) %>
                  </div>
                </div>
              </div>

              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary rounded-pill py-2 fw-bold">Simpan Perubahan</button>
                <a href="/<%= user.role %>/<%= userId %>/profile" class="btn btn-link text-decoration-none text-muted">Batal</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>